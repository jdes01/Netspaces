{
	"$schema": "https://www.krakend.io/schema/v3.json",
	"version": 3,
	"endpoints": [
		{
			"endpoint": "/api",
			"method": "POST",
			"backend": [
				{
					"host": ["netspaces_netspaces-api_1:3333"],
					"url_pattern": "/graphql",
					"method": "POST",
					"extra_config": {
						"backend/http": {
							"return_error_code": true
						}
					}
				}
			],
			"input_query_strings": ["*"]
		},
		{
			"endpoint": "/booking",
			"method": "POST",
			"backend": [
				{
					"host": ["netspaces_netspaces-booking-microservice_1:3333"],
					"url_pattern": "/graphql",
					"method": "POST",
					"extra_config": {
						"backend/http": {
							"return_error_code": true
						}
					}
				}
			],
			"input_query_strings": ["*"]
		}
	],
	"extra_config": {
		"security/cors": {
			"allow_origins": ["*"],
			"allow_methods": ["GET", "HEAD", "POST", "OPTIONS"],
			"expose_headers": [
				"Content-Length",
				"Content-Type",
				"Accept-Language",
				"Access-Control-Allow-Origin",
				"Access-Control-Allow-Methods",
				"Access-Control-Allow-Headers"
			],
			"allow_headers": [
				"Accept-Language",
				"Content-Type",
				"Access-Control-Allow-Origin",
				"Access-Control-Allow-Methods",
				"Access-Control-Allow-Headers"
			],
			"max_age": "12h",
			"allow_credentials": true,
			"debug": false
		},
		"router": {
			"auto_options": true,
			"return_error_msg": true
		}
	}
}
